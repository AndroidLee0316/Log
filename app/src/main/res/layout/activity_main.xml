<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >

  <EditText
      android:id="@+id/et_phone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:textColorHint="@color/color_gray"
      android:textColor="@color/color_black"
      android:hint="请输入手机号"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/tv_queryInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:textColor="@color/white2"
        android:text="查询并且上传日志"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/tv_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white2"
        android:onClick="onClick"
        android:text="上传日志"
        android:textSize="18sp"
        />
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="20dp"
      android:background="@color/colorRed"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="vertical"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不同方法打印Log耗时比较："
        android:textSize="20dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:id="@+id/tv_native_log"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onClick"
        android:textColor="@color/white2"
        android:text="原生Log"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/tv_tag_pascLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white2"
        android:onClick="onClick"
        android:text="PascLog带tag"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/tv_no_tag_pascLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white2"
        android:onClick="onClick"
        android:text="PascLog不带tag"
        android:textSize="18sp"
        />
    </LinearLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="20dp"
      android:background="@color/colorRed"
      />

  <com.pasc.sample.log.view.CircleView
      android:id="@+id/tasks_view"
      android:layout_width="223dp"
      android:layout_height="223dp"
      android:layout_marginLeft="75dp"
      android:layout_marginTop="20dp"
      android:visibility="gone"
      app:circleColor="@color/white"
      app:radius="50dip"
      app:ringBgColor="@color/white2"
      app:ringColor="@color/colorRed"
      app:strokeWidth="10dp" />
</LinearLayout>
